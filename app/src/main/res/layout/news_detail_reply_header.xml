<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?main_bg"
    app:isColorUi="true"
    android:id="@+id/reply_header_item">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_white_bg"
        android:paddingTop="15dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/reply_header_avatar"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginLeft="13dp"/>

        <TextView
            android:id="@+id/reply_header_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/reply_header_avatar"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/reply_header_avatar"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:isColorUi="true" />

        <TextView
            android:id="@+id/reply_header_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/font_color"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="30dp"
            android:layout_alignLeft="@id/reply_header_username"
            android:layout_below="@id/reply_header_username"
            android:lineSpacingMultiplier="1.3"
            app:isColorUi="true"/>

        <LinearLayout
            android:id="@+id/reply_header_report_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/reply_header_content"
            android:layout_alignLeft="@id/reply_header_username"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/reply_header_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?attr/font_color"/>
            <TextView
                android:id="@+id/reply_header_report_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?attr/font_color"
                android:text="@string/detail_report"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reply_header_thumbs_up_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/reply_header_report_ll"
            android:layout_alignLeft="@id/reply_header_username"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/thumbs_up_people1"
                android:layout_width="23dp"
                android:layout_height="23dp" />
            <ImageView
                android:id="@+id/thumbs_up_people2"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="9dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="?font_color"
                android:textSize="13sp"
                android:text="10人赞过>"
                app:isColorUi="true"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/reply_header_thumbs_up_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/reply_header_report_ll"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="13dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/thumbs_up_btn"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_thumbs_up"
                app:isColorUi="true"/>
            <TextView
                android:id="@+id/thumbs_up_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/bray"
                android:minEms="2"
                app:isColorUi="true"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>

        <View
            android:id="@+id/my_page_message_divider"
            android:layout_below="@id/reply_header_thumbs_up_people"
            style="@style/my_page_item_divider"
            android:background="?attr/divider_light_grey"
            app:isColorUi="true" />

        <TextView
            android:id="@+id/all_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?font_color"
            android:text="@string/all_comment"
            app:isColorUi="true"
            android:layout_below="@id/my_page_message_divider"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="13dp"/>

    </RelativeLayout>
</FrameLayout>

