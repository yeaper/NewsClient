<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_reply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_bg"
    android:orientation="vertical"
    app:isColorUi="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/reply_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="3.0dip"
            android:padding="10.0dip"
            android:scaleType="center"
            android:src="@drawable/category_edit_close" />
        <TextView
            android:id="@+id/reply_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textColor="?font_color"
            app:isColorUi='true'/>
    </RelativeLayout>
    <View
        style="@style/my_page_item_divider"
        android:background="?attr/divider_light_grey"
        app:isColorUi="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reply_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        style="@style/my_page_item_divider"
        android:background="?attr/divider_light_grey"
        app:isColorUi="true" />

    <include layout="@layout/news_detail_bottom_bar"/>

</LinearLayout>