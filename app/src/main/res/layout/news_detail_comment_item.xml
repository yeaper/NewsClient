<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?main_bg"
    app:isColorUi="true"
    android:id="@+id/comment_item">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_white_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <ImageView
            android:id="@+id/comment_avatar"
            android:layout_width="37dp"
            android:layout_height="37dp" />

        <TextView
            android:id="@+id/comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/comment_avatar"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/comment_avatar"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:isColorUi="true" />

        <LinearLayout
            android:id="@+id/thumbs_up_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/thumbs_up_btn"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_thumbs_up"
                app:isColorUi="true"/>
            <TextView
                android:id="@+id/thumbs_up_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/bray"
                android:minEms="2"
                app:isColorUi="true"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/font_color"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="17dp"
            android:layout_alignLeft="@id/comment_username"
            android:layout_below="@id/comment_username"
            android:lineSpacingMultiplier="1.3"
            app:isColorUi="true"/>

        <LinearLayout
            android:id="@+id/comment_reply_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/comment_content"
            android:layout_alignLeft="@id/comment_username"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/comment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?attr/font_color"/>
            <TextView
                android:id="@+id/comment_reply_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="?attr/font_color"
                android:text="@string/detail_reply"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>

