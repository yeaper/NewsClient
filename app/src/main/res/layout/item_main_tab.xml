<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_tab_item"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/ripple_white_bg"
    android:clickable="true">
    <com.yyp.newsclient.widget.MainBottomBarImage
        android:id="@+id/main_tab_img"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/main_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/main_tab_text_color"
        android:textSize="12sp" />
</LinearLayout>